<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <EditText
        android:id="@+id/usernameDangNhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tài khoản"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/passwordDangNhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mật khẩu"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/usernameDangNhap"/>

    <Button
        android:id="@+id/btnsigninDangNhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/passwordDangNhap"/>
    <Button
        android:id="@+id/btnsignupDangNhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sang bên đăng kí"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/btnsigninDangNhap"/>
</RelativeLayout>